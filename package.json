{
  "name": "microservices",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -ws --if-present",
    "build": "npm run build -ws --if-present",
    "build:web": "npm --workspace @app/web run build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3"
  }
}
